    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Naam)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prijs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Afbeelding)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Beestjes.Naam)
        </td>
