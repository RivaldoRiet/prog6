@model beestje_eindopdracht.ViewModels.BoekingViewModel

@{
    ViewBag.Title = "BeestjeSelect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 style="color:red" id="errormess">Selecteer minimaal 1 beestje</h3>

<div class="widget">
    <fieldset>
        <legend>Selecteer beestjes: </legend>
        <div id="checkboxes">
            @foreach (var beestje in Model.AvailableBeestjes)
            {
                <img src="@beestje.Afbeelding" />
                <label for="checkbox-nested-@beestje.Id">
                    @beestje.Naam
                    <input type="checkbox" name="checkbox-nested-@beestje.Id" id="checkbox-nested-@beestje.Id" class="@beestje.Id">
                </label>
            }
        </div>
    </fieldset>
</div>
@using (Html.BeginForm())
{
    <p>
        <button onclick="postBeestjes();return false;" id="saveButton" class="btn btn-primary"> Beestjes selecteren </button>
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>

        function postBeestjes() {
            var selected = [];

            if ($('#checkboxes input:checked').length == 0) {
                $("#errormess").show();
            } else {
                $('#checkboxes input:checked').each(function () {
                    selected.push($(this).attr('id').valueOf().split("checkbox-nested-")[1]);
                });
                $.post("/Boeking/BeestjeSelect", { "JSONString": selected });
                wait(1000);
                window.location.href = '../Boeking/Create';
            }


        }


        $(function () {
            $("#errormess").hide();
            $(".datepicker").datepicker({
                dateFormat: "yy/mm/dd",
                changeMonth: true,
                changeYear: true,
                //yearRange : "-10:+10"
                minDate: new Date(2019, 0, 1),
                maxDate: new Date(2021, 0, 1),
                showOn: "both",
                buttonText: "<i class='fa fa-calendar'></i>"
            });
        });

        function wait(ms) {
            var start = new Date().getTime();
            var end = start;
            while (end < start + ms) {
                end = new Date().getTime();
            }
        }
    </script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("input").checkboxradio();
        });
    </script>
}