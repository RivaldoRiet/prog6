@model beestje_eindopdracht.ViewModels.BoekingViewModel

@{
    ViewBag.Title = "BeestjeSelect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>BeestjeSelect</h2>


<div class="widget">
    <fieldset>
        <legend>Selecteer beestjes: </legend>
        <div id="checkboxes">
            @foreach (var beestje in Model.AvailableBeestjes)
            {
                <img src="@beestje.Afbeelding" />
                <label for="checkbox-nested-@beestje.Id">
                    @beestje.Naam
                    <input type="checkbox" name="checkbox-nested-@beestje.Id" id="checkbox-nested-@beestje.Id" class="@beestje.Id">
                </label>
            }
         </div>
    </fieldset>
</div>

<p>
    <a type="button" href="/Boeking/Create" onclick="postBeestjes()" class="btn btn-primary"> Beestjes selecteren </a>
</p>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>

        function postBeestjes() {
            var selected = [];
            $('#checkboxes input:checked').each(function () {
                selected.push($(this).attr('id').valueOf().split("checkbox-nested-")[1]);
            });
            $.post("/Boeking/BeestjeSelect", { "JSONString": selected });
        }


        $(function () {
            $("#errormess").hide();
            $(".datepicker").datepicker({
                dateFormat: "yy/mm/dd",
                changeMonth: true,
                changeYear: true,
                //yearRange : "-10:+10"
                minDate: new Date(2019, 0, 1),
                maxDate: new Date(2021, 0, 1),
                showOn: "both",
                buttonText: "<i class='fa fa-calendar'></i>"
            });
        });
    </script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("input").checkboxradio();
        });
    </script>
}