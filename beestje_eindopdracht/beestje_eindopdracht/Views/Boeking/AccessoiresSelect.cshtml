@model IEnumerable<beestje_eindopdracht.Models.Accessoires>

@{
    ViewBag.Title = "AccessoiresSelect";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="widget">
    <fieldset>
        <legend>Selecteer accessoires: </legend>
        <div id="checkboxes">
            @if (Model != null)
            {
                foreach (var accessoires in Model.ToList())
                {
                    <img src="@accessoires.Afbeelding" style="width:100px;height:100px;" />
                    <label for="checkbox-nested-@accessoires.Id">
                        @accessoires.Naam prijs - €@accessoires.Prijs.ToString().Split(',')[0]
                        <input type="checkbox" name="checkbox-nested-@accessoires.Id" id="checkbox-nested-@accessoires.Id" class="@accessoires.Id">
                    </label>
                }
            }
        </div>
    </fieldset>
</div>

@using (Html.BeginForm())
{
    <p>
        <a type="button" href="/Boeking/Create" onclick="return postAccessoires();" class="btn btn-primary"> Accessoires selecteren </a>
    </p>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>

        postAccessoires = function () {
            var selected = [];

            if ($('#checkboxes input:checked').length == 0) {
                $("#errormess").show();
                return false;
            } else {
                $('#checkboxes input:checked').each(function () {
                    selected.push($(this).attr('id').valueOf().split("checkbox-nested-")[1]);
                });
                $.post("/Boeking/AccessoiresSelect", { "JSONString": selected });
                
            }
            return true;
        }

        $(function () {
            $("#errormess").hide();
            $(".datepicker").datepicker({
                dateFormat: "yy/mm/dd",
                changeMonth: true,
                changeYear: true,
                //yearRange : "-10:+10"
                minDate: new Date(2019, 0, 1),
                maxDate: new Date(2021, 0, 1),
                showOn: "both",
                buttonText: "<i class='fa fa-calendar'></i>"
            });
        });

        function wait(ms) {
            var start = new Date().getTime();
            var end = start;
            while (end < start + ms) {
                end = new Date().getTime();
            }
        }
    </script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script>
        $(function () {
            $("input").checkboxradio();
        });
    </script>
}

